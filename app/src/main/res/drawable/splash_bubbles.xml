<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Deep Navy Blue (base) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#081221"
            android:endColor="#0A1935"
            android:angle="90"/>
        </shape>
    </item>

    <!-- Soft Electric Blue Glow (top center) -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="480dp"
                android:centerX="0.5"
                android:centerY="0.0"
                android:startColor="#402A6CFF"
            android:endColor="#00000000"/>
        </shape>
    </item>

</layer-list>
